<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.communities.YourCommunitiesFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/your_communities_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="16dp"
        android:clipToPadding="false"
        android:paddingBottom="32dp" />

    <TextView
        android:id="@+id/no_communities_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="50dp"
        android:text="@string/you_haven_t_joined_any_communities_yet"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="gone" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_create_community"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:layout_margin="16dp"
        android:contentDescription="@string/create_a_community"
        android:src="@drawable/ic_add" />
</FrameLayout>